# Copy this file to .secrets.toml and fill in your values
# DO NOT commit .secrets.toml to git!

[default]
# Database
database_url = "postgresql+asyncpg://postgres:postgres@localhost:5432/odrmitra"

# Redis
redis_url = "redis://localhost:6379/0"

# JWT Secret (generate a random 32+ char string)
jwt_secret = "CHANGE_ME_generate_a_random_secret_key_here"

# DeepSeek LLM API Key (https://platform.deepseek.com)
deepseek_api_key = "sk-your-deepseek-api-key"

# LlamaParse API Key (https://cloud.llamaindex.ai) — for document parsing
llama_cloud_api_key = "llx-your-llamaparse-key"

# Cloudinary (https://cloudinary.com) — for document storage
cloudinary_cloud_name = "your-cloud-name"
cloudinary_api_key = "your-api-key"
cloudinary_api_secret = "your-api-secret"

# Sarvam AI (https://sarvam.ai) — for voice STT/TTS
sarvam_api_key = "sk_your_sarvam_api_key"
